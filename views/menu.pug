extends layout

block content
  h2 Grocery Menu
  p.text-muted Browse items and manage your groceries.

  // Top Buttons
  .d-flex.justify-content-end.mb-3
    a.btn.btn-primary.me-2(href="/add-item") Add New Grocery Item
    a.btn.btn-warning.me-2(href="/tracker") View Tracker
    a.btn.btn-success(href="/cart") View Cart Items

  // Grocery Items
  .row.mt-4

    // 1. Organic Apples
    .col-md-4
      .card.mb-4.shadow-sm
        .card-body
          h4 Organic Apples
          p Category: Fruits
          p Eco Score: 90
          p Carbon Footprint: 0.40 kg CO₂
          .d-flex.gap-2
            button.btn.btn-success.btn-sm Add to Cart
            button.btn.btn-info.btn-sm Track
            button.btn.btn-danger.btn-sm Delete

    // 2. Bananas
